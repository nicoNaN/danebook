<%= render partial: '/shared/top' %>

<main id="about" class="container">

  <div class="row section-banner section-header">
    <div class="col-sm-2 col-sm-offset-5">
      <h1>Photos</h1>
    </div>
    <div class="col-sm-2 col-sm-offset-3 edit-button">
      <%= button_to "Add photo", new_user_photo_path(params[:user_id]), class: "btn btn-primary", method: "get" %>
    </div>
  </div>

  <div class="row section-content">

  <% @photos.each do |photo| %>
    <div class="col-sm-4">
      <div class="row photo-listing">
        <div class="col-sm-12">
          <a href="#">
            <%= image_tag photo.data.url, :class => "img-responsive img-thumbnail center-block" %>
          </a>
          <p class="hover-text">Uploaded Jan. 1, 2015</p>
        </div>
      </div>
    </div>
  <% end %>

  </div>
</main>
